@model IEnumerable<EventoFactory.Models.Eventos>

@{
    ViewBag.Title = "Index";
}

<head>
    <link href="~/Content/Eventos/eventos.css" rel="stylesheet"/>
</head>

<h2>Eventos</h2>

<div class="container">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID_Evento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locais.Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingressos.ID_Ingresso)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID_Evento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Locais.Endereco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ingressos.ID_Ingresso)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID_Evento }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID_Evento }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID_Evento})
                </td>
            </tr>
        }

    </table>

</div>
