@model EventoFactory.Models.Eventos



@{
    ViewBag.Title = "Eventos";
    Layout = "../Shared/_LayoutPortalUsuario.cshtml";
}

<title>Shop Item - Start Bootstrap Template</title>


<div class="container">

    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">

            <div class="thumbnail">
                <span>
                    <img width="800px" height="400px" src="data:image/jpg;base64,@(Convert.ToBase64String(@Model.Imagem))" alt=""/>
                </span>
                <div class="caption-full">

                    <h4 class="text-center" id="nomeProduto">@Html.DisplayFor(model => model.Nome)</h4>

                    <p>@Html.DisplayFor(model => model.Descricao)</p>
                    <p>Preço: <span id="preco">@Html.DisplayFor(model => model.Ingressos.Preco)</span></p>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" align="center" style="margin-top: 5%; margin-bottom: 5%; margin-left: 5%;">

                            <a href="@Url.Action("Index", "Home")">
                                <button type="button" class="btn btn-danger" style="float: left;">Voltar</button>
                            </a>
                            <button type="button" class="btn btn-success" style="margin-right: 18%;" data-toggle="modal" data-target=".bd-example-modal-sm">Comprar</button>
                            <!-- Aqui abre caixinha de dialogo -->
                            <div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-sm">
                                    <div class="modal-content" style="padding-bottom: 30px; background-color: #FFFFE0">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <h2 style="color: #B5B5B5">Comprar ingresso</h2>
                                                        <hr />
                                                    </div>
                                                </div>
                                                <!-- Nome do titular -->
                                                @using (Html.BeginForm("Evento", "Home", FormMethod.Post, new { @class = "form-horizontal" })) {
                                                    @Html.AntiForgeryToken();
                                                    <div class="row">

                                                        <div class="col-md-12" style="margin-bottom: 15px;">
                                                            <div class="glyphicon glyphicon-user"></div>
                                                            <label for="Nome">Nome do titular: </label>
                                                            <br />
                                                            <input type="text" class="modal-content" required />
                                                        </div>
                                                    </div>
                                                    <!-- Numero do cartão -->
                                                    <div class="row">
                                                        <div class="col-md-12" style="margin-bottom: 15px;">
                                                            <div class="glyphicon glyphicon-credit-card"></div>
                                                            <label for="numero">Numero do cartão: </label>
                                                            <br />
                                                            <input type="text" class="modal-content" id="numeroDoCartao" required />
                                                        </div>
                                                    </div>
                                                    <!-- Vencimento do cartão -->
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <div class="glyphicon glyphicon-calendar"></div>
                                                            <label for="vencimento">Vencimento do cartão:</label>
                                                        </div>
                                                        <div class="col-md-12" style="margin-bottom: 15px;">
                                                            <select name="mes" id="CaixaMes" style="border-radius: 5px;" required>
                                                                <option value="" disabled selected>MM</option>
                                                                <option value="1">1</option>
                                                                <option value="2">2</option>
                                                                <option value="3">3</option>
                                                                <option value="4">4</option>
                                                                <option value="5">5</option>
                                                                <option value="6">6</option>
                                                                <option value="7">7</option>
                                                                <option value="8">8</option>
                                                                <option value="9">9</option>
                                                                <option value="10">10</option>
                                                                <option value="11">11</option>
                                                                <option value="12">12</option>
                                                            </select>

                                                            <select name="ano" id="CaixaAno" style="border-radius: 5px;" required>
                                                                <option value="" disabled selected>AA</option>
                                                                <option value="17">17</option>
                                                                <option value="18">18</option>
                                                                <option value="19">19</option>
                                                                <option value="20">20</option>
                                                                <option value="21">21</option>
                                                                <option value="22">22</option>
                                                                <option value="23">23</option>
                                                                <option value="24">24</option>
                                                                <option value="25">25</option>
                                                                <option value="26">26</option>
                                                                <option value="27">27</option>
                                                                <option value="28">28</option>
                                                            </select>

                                                        </div>
                                                        <!-- Código de segurança -->
                                                        <div class="row" style="margin-bottom: 15px;">
                                                            <div class="col-md-12">
                                                                <div class="glyphicon glyphicon-lock"></div>
                                                                <label for="cvc">Codigo de segurança: </label>
                                                                <input type="text" name="cvc" id="codigo" placeholder="CVC" style="border-radius: 5px; width: 37px;" required />
                                                            </div>
                                                        </div>
                                                        <div class="row" style="margin-bottom: 15px;">
                                                            <div class="col-md-12">
                                                                <!-- Quantidade de ingressos -->
                                                                <input type="number" max="10" min="1" id="quantidade" name="quantidade" />
                                                                <br />
                                                                <div>
                                                                    <input type="hidden" name="idIngresso" value="@Model.ID_Ingresso" /></div>
                                                            </div>

                                                        </div>
                                                        <div class="row" style="margin-bottom: 15px;">
                                                            <div class="col-md-12">
                                                                <div class="glyphicon glyphicon-piggy-bank">
                                                                </div>
                                                                <label for="preco">Total: R$ </label>

                                                                <!-- Aqui será pegado o preço do ingresso e multiplicado pela quantidade de ingressos, expondo sempre ao usuario o novo valor -->
                                                                <div style="color: green; text-shadow: 0.5px 0.5px 1px;" id="total">R$ @Html.DisplayFor(model => model.Ingressos.Preco)</div>
                                                            </div>
                                                        </div>
                                                        <div class="row" style="margin-bottom: 15px;">
                                                            <div class="col-md-12">
                                                                <!-- Aqui está localizado o botão de cancelar -->
                                                                <a href="@Url.Action("Eventos", "Evento")">
                                                                    <button type="button" class="btn btn-warning">Cancelar</button>
                                                                </a>
                                                                <!-- Aqui está localizado o botão de confirmar compra -->
                                                                <button type="submit" value="Acessar" class="btn btn-info">Confirmar</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Mascaras para os inputs do numero do cartão e do CVC, limitando o usuario a escrever só o que for necessario -->

<script>
    $(document).ready(function () {
        $('#quantidade').on('change', function () {
            var preco = parseFloat(@Model.Ingressos.Preco);
            var quantidade = $(this).val();
            var valor = preco * quantidade;
            $('#total').text("R$ " + valor.toFixed(2));
        });
    })

</script>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#numeroDoCartao").inputmask("mask", { "mask": "9999-9999-9999-9999" });
            $("#codigo").inputmask("mask", { "mask": "999" });
        });
    </script>
}